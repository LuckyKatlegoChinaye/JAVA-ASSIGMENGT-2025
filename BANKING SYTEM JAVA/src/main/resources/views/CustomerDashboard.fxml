<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.CustomerDashboardController"
      spacing="10" alignment="CENTER" style="-fx-padding:20;">

    <Label fx:id="nameLabel" style="-fx-font-size:18px; -fx-font-weight:bold;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Apply for Account:"/>
        <ChoiceBox fx:id="applyChoice"/>
        <Button text="Apply" onAction="#onApplyAccount"/>
    </HBox>

    <TextArea fx:id="accountDisplay" prefRowCount="6" editable="false"/>

    <HBox spacing="10" alignment="CENTER">
        <ChoiceBox fx:id="accountChoice" promptText="Select Account"/>
        <Label text="Deposit:"/>
        <TextField fx:id="depositAmount" prefWidth="80"/>
        <Button text="Deposit" onAction="#onDeposit"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Withdraw:"/>
        <TextField fx:id="withdrawAmount" prefWidth="80"/>
        <Button text="Withdraw" onAction="#onWithdraw"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Transfer To:"/>
        <TextField fx:id="transferToField" promptText="Target Account"/>
        <Label text="Amount:"/>
        <TextField fx:id="transferAmountField" prefWidth="80"/>
        <Button text="Transfer" onAction="#onTransfer"/>
    </HBox>

    <Button text="Logout" onAction="#onLogout"
            style="-fx-background-color: #d9534f; -fx-text-fill: white;"/>
</VBox>
