<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.LoginController"
            prefWidth="420" prefHeight="300">
    <children>
        <VBox alignment="CENTER" spacing="10" layoutX="60" layoutY="40" prefWidth="300">
            <Label text="Banking System Login" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            
            <Label text="Username:" />
            <TextField fx:id="usernameField" promptText="Enter username" maxWidth="200"/>

            <Label text="Password:" />
            <PasswordField fx:id="passwordField" promptText="Enter password" maxWidth="200"/>

            <HBox alignment="CENTER" spacing="10">
                <Button text="Login" onAction="#handleLogin" />
                <Button text="Register" onAction="#handleRegister" />
            </HBox>

            <Label text="(Admin: admin / admin123)" style="-fx-font-size: 11px; -fx-text-fill: gray;" />
        </VBox>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</AnchorPane>
