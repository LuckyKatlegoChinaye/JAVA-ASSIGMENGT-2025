<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.StaffDashboardController"
            prefWidth="900" prefHeight="600">

    <top>
        <VBox spacing="8" style="-fx-padding:12;">
            <HBox spacing="8" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Search username or full name..." HBox.hgrow="ALWAYS"/>
                <Button fx:id="searchButton" text="Search"/>
                <Button fx:id="refreshButton" text="Refresh"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#handleLogout" style="-fx-background-color:#e74c3c; -fx-text-fill:white;"/>
            </HBox>

            <HBox spacing="12" alignment="CENTER_LEFT">
                <Label text="Stats:"/>
                <Label fx:id="statsLabel" text="Pending: 0 | Approved: 0 | Rejected: 0"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="createAccountButton" text="Create Account" style="-fx-background-color:#3498db; -fx-text-fill:white;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane orientation="VERTICAL">
            <VBox spacing="10" style="-fx-padding:10;">
                <Label text="Pending Customers" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
                <TextArea fx:id="customerListArea"
                          editable="false"
                          wrapText="false"
                          prefRowCount="10"
                          style="-fx-font-family:monospace; -fx-control-inner-background:#f9f9f9;"/>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button fx:id="approveButton" text="Approve" style="-fx-background-color:#27ae60; -fx-text-fill:white;"/>
                    <Button fx:id="rejectButton" text="Reject" style="-fx-background-color:#c0392b; -fx-text-fill:white;"/>
                </HBox>
            </VBox>

            <VBox spacing="10" style="-fx-padding:10;">
                <Label text="Pending Accounts" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
                <TextArea fx:id="accountListArea"
                          editable="false"
                          wrapText="false"
                          prefRowCount="10"
                          style="-fx-font-family:monospace; -fx-control-inner-background:#f9f9f9;"/>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button fx:id="approveAccountsButton" text="Approve Account" style="-fx-background-color:#27ae60; -fx-text-fill:white;"/>
                    <Button fx:id="rejectAccountsButton" text="Reject Account" style="-fx-background-color:#c0392b; -fx-text-fill:white;"/>
                </HBox>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
