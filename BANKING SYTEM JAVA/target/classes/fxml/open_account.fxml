<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bank.controller.OpenAccountController"
            style="-fx-background-color: linear-gradient(to bottom right, #0A2E21, #062114);">

    <children>

        <VBox alignment="CENTER" prefWidth="900" prefHeight="600" spacing="20">

            <VBox spacing="18" maxWidth="450"
                  style="-fx-background-color: white;
                         -fx-padding: 30;
                         -fx-background-radius: 12;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 10, 0, 0, 2);">

                <!-- HEADER -->
                <Label text="Open New Account"
                       style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #0d2c1d;"/>

                <!-- DESCRIPTION -->
                <Label wrapText="true"
                       text="Fill the details below to create a new bank account for the customer."
                       style="-fx-font-size: 14px; -fx-text-fill: #555;"/>

                <!-- INPUTS -->
                <VBox spacing="12">

                    <ComboBox fx:id="accountTypeBox"
                              promptText="Select Account Type"
                              style="-fx-background-radius: 6;"/>

                    <TextField fx:id="initialDepositField"
                               promptText="Initial Deposit Amount"
                               style="-fx-background-radius: 6;"/>

                    <TextField fx:id="accountHolderField"
                               promptText="Account Holder Full Name"
                               style="-fx-background-radius: 6;"/>

                    <TextArea fx:id="notesField"
                              promptText="Additional Notes (Optional)"
                              prefRowCount="3"
                              wrapText="true"
                              style="-fx-background-radius: 6;"/>
                </VBox>

                <!-- ERROR MESSAGE -->
                <Label fx:id="errorLabel"
                       text=""
                       style="-fx-text-fill: #c0392b; -fx-font-weight: bold;"
                       visible="false"/>

                <!-- BUTTONS -->
                <HBox alignment="CENTER" spacing="12">

                    <Button fx:id="createAccountButton"
                            text="Create Account"
                            onAction="#handleCreateAccount"
                            style="-fx-background-color: #0d2c1d;
                                   -fx-text-fill: white;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 6;
                                   -fx-padding: 10 20;"/>

                    <Button fx:id="cancelButton"
                            text="Cancel"
                            onAction="#handleCancel"
                            style="-fx-background-color: #c0392b;
                                   -fx-text-fill: white;
                                   -fx-background-radius: 6;
                                   -fx-padding: 10 20;"/>
                </HBox>

            </VBox>

        </VBox>
    </children>

</AnchorPane>
